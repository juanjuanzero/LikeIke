@model LikeIke.Models.TaskListViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class=" col-md-12 row">
    
    <h2>Important Tasks</h2>

    @for (var i = 0; i < Model.TaskList.Count; i++)
    {
        <div class="col-sm-12 row">
            <div class=" col-sm-8 checkbox">
                <label><input type="checkbox" value="">@Model.TaskList[i].TaskName</label>
            </div>
            <div class="col-sm-4 btn-group">
                @Html.ActionLink("Review", "TaskDetail", new {id = Model.TaskList[i].TaskId }, new { @class="btn btn-info btn-sm"})
                @Html.ActionLink("Edit","EditTask", new { id = Model.TaskList[i].TaskId }, new { @class = "btn btn-primary btn-sm"})
                <a class = "btn btn-danger btn-sm"data-toggle="modal" href="@("#DeleteTaskModal" + i)">Del</a>
                <div id="@("DeleteTaskModal"+i)" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            @using(Html.BeginForm("DeleteTask", "Home"))
                            {
                                <input type="hidden" value="@(Model.TaskList[i].TaskId)" name="TaskId"/>

                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Delete Task</h4>
                                </div>
                                
                                <div class="modal-body">
                                    Are you sure you want to delete @Model.TaskList[i].TaskName task?
                                </div>
                                
                                <div class="modal-footer">
                                    @Html.ActionLink("Review", "TaskDetail", new { id = Model.TaskList[i].TaskId }, new { @class = "btn btn-info" })
                                    <button type="submit" class="btn btn-primary">Yes, Delete it</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    }

    @*Save Progress: This button will delete tasks that have a mark of complete*@


</div>

@*Added the ATmodel connection to connect the HomeController with the Index.cshtml page. It is taking the TaskListViewModel which is what is being passed into the view*@
@*Note: passing in the id parameter of the element is important for the methods to be able to connect particular elements from one another.*@